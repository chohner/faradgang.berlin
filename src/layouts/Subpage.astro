---
import Hero from "../components/Hero.astro";
import Layout from "./Layout.astro";
import FloatingButton from "../components/FloatingButton.astro";
import ContentContainer from "../components/ContentContainer.astro";

import type { MarkdownLayoutProps } from "astro";

type Props = MarkdownLayoutProps<{
    // Define frontmatter props here
    title: string;
    gradientHeadlines?: boolean;
}>;
const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
    <Hero>
        <h1 class="mainTitle">{frontmatter.title}</h1>
    </Hero>
    <FloatingButton text="ZurÃ¼ck" href={`${import.meta.env.BASE_URL}`} />

    <ContentContainer>
        <div
            class:list={[
                { "gradient-headlines": frontmatter.gradientHeadlines },
            ]}
        >
            <slot />
        </div>
    </ContentContainer>
</Layout>

<style>
    .mainTitle {
        width: 100vw;
        word-wrap: break-word;
        text-align: center;
    }
</style>
