---
import Hero from "./Hero.astro";
import ThemeSwitchButton from "./ThemeSwitcher/ThemeSwitchButton.astro";
import "@fontsource/rubik/latin-700.css";
const BUILD_TIME = new Date().toLocaleString("de-DE", {
  seconds: "numeric",
  year: "numeric",
  month: "short",
  day: "numeric",
});
---

<footer>
  <Hero>
    <ul role="list">
      <li><ThemeSwitchButton /></li>
      <li>
        <a href={`${import.meta.env.BASE_URL}impressum`}>Impressum</a>
      </li>
      <li>
        <a href={`${import.meta.env.BASE_URL}datenschutzerklaerung`}>
          Datenschutzerkl√§rung
        </a>
      </li>
      <li>
        Stand: {BUILD_TIME}
      </li>
    </ul>
  </Hero>
</footer>

<style>
  ul {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  li {
    display: inline;
    margin-left: 3vw;
  }

  a {
    font-weight: 700;
    font-size: larger;
    text-decoration: none;
    color: var(--background-color);
    font-family: "Rubik";
  }

  a:hover {
    text-decoration: underline;
  }
</style>
