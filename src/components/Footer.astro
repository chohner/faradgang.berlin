---
import Hero from "./Hero.astro";
import ThemeSwitchButton from "./ThemeSwitcher/ThemeSwitchButton.astro";
import "@fontsource/rubik/latin-700.css";

import LanguagePicker from "../components/LanguagePicker.astro";
import { getLangFromUrl, useTranslations, localizedUrl } from "../i18n/utils";
const language = getLangFromUrl(Astro.url);
const translations = useTranslations(language);
const imprintUrl = localizedUrl("imprint", language);
const privacyUrl = localizedUrl("privacy-policy", language);

const BUILD_TIME = new Date().toLocaleString("de-DE", {
  seconds: "numeric",
  year: "numeric",
  month: "short",
  day: "numeric",
});
---

<footer>
  <Hero>
    <div style="justify-content: center">
      <ul>
        <li>
          <a href={imprintUrl}>{translations("nav.imprint")}</a>
        </li>
        <li>
          <a href={privacyUrl}>{translations("nav.privacy-policy")}</a>
        </li>
      </ul>
      <ul>
        <li><LanguagePicker /></li>
        <li><ThemeSwitchButton /></li>
      </ul>
      <ul>
        <li>{translations("lastUpdate")}: {BUILD_TIME}</li>
      </ul>
    </div>
  </Hero>
</footer>

<style>
  ul {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  li {
    display: inline;
    padding: 0 2vw;
  }

  a {
    font-weight: 700;
    font-size: larger;
    text-decoration: none;
    font-family: "Rubik";
  }

  a:hover {
    text-decoration: underline;
  }
</style>
