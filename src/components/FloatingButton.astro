---
import { ThemeSwitch } from "astro-color-scheme";
import FontChanger from "../components/FontChanger.astro";

export interface Props {
  text: string;
  href: string;
}

const { href, text } = Astro.props;
---

<div class="floating_menu">
  <ul role="list">
    <li>
      <a href={href}>
        <button class="floating_button">{text}</button>
      </a>
    </li>
    <li>
      <ThemeSwitch strategy="button">
        <button>Toggle Theme</button>
      </ThemeSwitch>
    </li>
    <li>
      <FontChanger />
    </li>
  </ul>
</div>

<style>
  .floating_menu {
    position: fixed;
    top: 40px;
    right: 5rem;
  }

  .floating_button {
    background-color: rgb(255, 251, 5);
    color: #000;
    width: 120px;
    height: 120px;
    border-radius: 60px;
    font-size: 2rem;
    text-align: center;
    font-weight: bold;
    rotate: 15deg;
    border: 1px solid black;
    transition: 0.1s ease-in;
    box-shadow: 2px 2px 3px #383838;
  }

  .floating_button:hover {
    text-decoration: underline;
    cursor: pointer;
    rotate: 0deg;
    transition: 0.1s ease-in;
  }

  ul {
    list-style: none;
  }
</style>
