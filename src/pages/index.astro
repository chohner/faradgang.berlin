---
import Layout from "../layouts/Layout.astro";
import Svg from "@jasikpark/astro-svg-loader";
import FloatingButton from "../components/FloatingButton.astro";
import AlternatingContainer from "../components/AlternatingContainer.astro";
import Hero from "../components/Hero.astro";
import ContentCard from "../components/ContentCard.astro";
import ContentContainer from "../components/ContentContainer.astro";
---

<Layout title="Faradgang Berlin e.V.">
  <FloatingButton text="Helfen" href={`${import.meta.env.BASE_URL}helfen`} />
  <Hero>
    <Svg
      src={import("../assets/faradgang_logo_big.svg?raw")}
      aria-label="A childishly drawn bicycle"
      width="40vw"
      height="auto"
    />
  </Hero>
  <ContentContainer>
    <AlternatingContainer>
      <Svg
        src={import("../assets/wheel.svg?raw")}
        aria-label="A childishly drawn bicycle"
        width="15vw"
        height="auto"
        style="float: right;padding-right: 5vw;"
      />
      <Svg
        src={import("../assets/bell.svg?raw")}
        aria-label="A childishly drawn bicycle"
        width="6vw"
        height="auto"
        style="float: right;padding-right: 13vw;padding-top:5vw;"
      />
      <ContentCard headline="Was" subheadline="wir machen">
        <p>
          Wir möchten durch Mobilität ein Stück Selbstbestimmtheit, Freiheit und
          Lebensqualität an andere weitergeben. Dieses Ziel verwirklichen wir
          gemeinsam mit anderen in verschiedenen Projekten.
        </p>
      </ContentCard>

      <Svg
        src={import("../assets/dynamo.svg?raw")}
        aria-label="A childishly drawn bicycle"
        width="6vw"
        height="auto"
        style="float: left;padding-left: 10vw;padding-top:0vw; margin-right: 2rem;"
      />

      <ContentCard subheadline="Schraubertage">
        An unseren Schraubertagen reparieren wir gemeinsam mit bedürftige
        Menschen gespendete Fahrräder.
      </ContentCard>

      <Svg
        src={import("../assets/backlight.svg?raw")}
        aria-label="A childishly drawn bicycle"
        width="6vw"
        height="auto"
        style="float: right;padding-right: 3vw;padding-top:0vw; margin-right: 2rem;"
      />

      <Svg
        src={import("../assets/pedal.svg?raw")}
        aria-label="A childishly drawn bicycle"
        width="6vw"
        height="auto"
        style="float: right;padding-right: 3vw;padding-top:4vw; margin-left: 2rem;"
      />

      <ContentCard subheadline="Selbsthilfe Werkstatt">
        Jeden Freitag betreuen wir eine offene Werkstatt in den
        Prinzessinengärten, bei der alle eingeladen..
      </ContentCard>

      <Svg
        src={import("../assets/cart.svg?raw")}
        aria-label="A childishly drawn bicycle"
        width="15vw"
        height="auto"
        style="float: left;padding-left: 3vw;padding-top:4vw; margin-left: 2rem;"
      />

      <ContentCard headline="Wen" subheadline="wir erreichen möchten">
        Jeden Freitag betreuen wir eine offene Werkstatt in den
        Prinzessinengärten, bei der alle eingeladen..
      </ContentCard>

      <Svg
        src={import("../assets/brakes.svg?raw")}
        aria-label="A childishly drawn bicycle"
        width="10vw"
        height="auto"
        style="float: right;padding-right: 15vw;padding-top:4vw; margin-left: 2rem;"
      />

      <ContentCard headline="Wer" subheadline="wir sind">
        Faradgang Berlin e.V. ist ein gemeinnütziger Verein
      </ContentCard>
    </AlternatingContainer>
  </ContentContainer>
</Layout>
